<div class="post basis-3/5">
  <div class="flex justify-between align-center">
    <h1 class="font-bold text-4xl mb-5">
      <%= currentPost.title %>
    </h1>
    <div class="actions relative">
      <button class="mr-2 h-10 w-10 rounded-full">
        <i class="fa-solid fa-ellipsis-vertical"></i>
      </button>
      <div class="actions-list hidden absolute top-3/4 right-0 py-2.5 bg-grey rounded-2xl w-48 z-10">
        <ul>
          <li>
            <a href="/post/<%= currentPost.id %>/edit" class="action-btn block py-2.5 px-5 hover:bg-grey-hover">
              <i class="fa-solid fa-pen"></i>
              <span class="ml-2">Modifier</span>
            </a>
          </li>
          <li>
            <a href="/post/<%= currentPost.id %>/delete" class="action-btn block py-2.5 px-5 hover:bg-grey-hover">
              <i class="fa-solid fa-trash"></i>
              <span class="ml-2">Supprimer</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="img h-[400px] mb-2">
    <img class="rounded-3xl w-full h-full object-cover" src="imgs/uploads/<%= currentPost.image%>" alt="post image" />
  </div>
  <div class="flex justify-end mb-4">
    <p class="text-sm text-neutral-600">
      <%= currentPost.name %> &bull; <span class="text-neutral-400">
          <%= currentPost.timestamp %>
        </span>
    </p>
  </div>
  <p>
    <%= currentPost.content %>
  </p>
</div>